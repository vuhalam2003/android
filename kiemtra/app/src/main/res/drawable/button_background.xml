<!-- button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Button pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF4081"/> <!-- Change color to match your design -->
            <corners android:radius="8dp"/> <!-- Adjust corner radius as needed -->
        </shape>
    </item>

    <!-- Button default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3F51B5"/> <!-- Change color to match your design -->
            <corners android:radius="8dp"/> <!-- Adjust corner radius as needed -->
        </shape>
    </item>

</selector>
