<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:id="@+id/nv"
        android:background="@android:color/white">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý nhân viên"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- EditText for ID -->
        <EditText
            android:id="@+id/edtNhanVienId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="16dp" />

        <!-- EditText for Name -->
        <EditText
            android:id="@+id/edtNhanVienName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="16dp" />

        <!-- EditText for Position -->
        <EditText
            android:id="@+id/edtNhanVienPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Position"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="16dp" />

        <!-- EditText for Email -->
        <EditText
            android:id="@+id/edtNhanVienEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="16dp" />

        <!-- EditText for Phone -->
        <EditText
            android:id="@+id/edtNhanVienPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="16dp" />
        <EditText
            android:id="@+id/edtDonViCha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Parent Unit"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="16dp" />

        <!-- ImageView for Avatar -->
        <ImageView
            android:id="@+id/imageViewAvatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/default_avatar"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginBottom="16dp" />

        <!-- Button for selecting image -->
        <Button
            android:id="@+id/btnSelectImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Image"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Buttons arranged horizontally -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Add, Update Buttons -->
            <Button
                android:id="@+id/btnAddNhanVien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnUpdateNhanVien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_marginEnd="8dp" />

            <!-- Delete, Search Buttons -->
            <Button
                android:id="@+id/btnDeleteNhanVien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnSearchNhanVien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search" />

        </LinearLayout>

        <!-- Button for viewing all -->
        <Button
            android:id="@+id/btnViewAllNhanVien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View All"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
